@model IEnumerable<Coticula2Face.Models.Coticula.Submit>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Problem.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Verdict.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.ActionLink(item.Problem.Name, "Details", "Problem", new { id = item.ProblemID }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Verdict.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
