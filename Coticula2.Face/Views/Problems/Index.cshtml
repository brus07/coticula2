@model IEnumerable<Coticula2.Face.Models.Problem>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProblemID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProblemID)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ProblemID">@item.Title</a>
            </td>
            <td>
                <a asp-action="Retest" asp-route-id="@item.ProblemID">Retest</a> |
                <a asp-action="Edit" asp-route-id="@item.ProblemID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ProblemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
